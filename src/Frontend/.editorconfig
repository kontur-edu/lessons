[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = false
indent_style = tab
indent_size = 4

[{.babelrc, .stylelintrc, jest.config, .eslintrc, .prettierrc, *.json, *.jsb3, *.jsb2, *.bowerrc}]
indent_style = space
indent_size = 2

[*.less]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.js]
indent_style = tab
tab_width = 4

[*.js.flow]
indent_style = tab
tab_width = 4

[{jshint.json, *.jshintrc}]
indent_style = space
indent_size = 2

[*.js.map]
indent_style = space
indent_size = 2

[{.analysis_options, *.yml, *.yaml}]
indent_style = space
indent_size = 2

