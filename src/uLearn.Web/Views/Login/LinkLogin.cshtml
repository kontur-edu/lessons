@using FormMethod = System.Web.Mvc.FormMethod
@model uLearn.Web.Controllers.LinkLoginViewModel

@using (Html.BeginForm("DoLinkLogin", "Login", new { provider = Model.Provider, returnUrl = Model.ReturnUrl }, FormMethod.Post, new { id = "link-login-form" }))
{
	@Html.AntiForgeryToken()
}

@section scripts
{
	<script>
		$(document).ready(function() {
			$('#link-login-form').submit();
		});
	</script>
}