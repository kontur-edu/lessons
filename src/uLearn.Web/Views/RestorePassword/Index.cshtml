@using FormMethod = System.Web.Mvc.FormMethod
@model RestorePasswordModel

@{
	ViewBag.Title = "Восстановление пароля";
}

<div class="container">
	<div class="row">
		<div class="col-md-offset-4 col-md-4">
			<h2>@ViewBag.Title</h2>
			<section class="login-and-registration-form">
				@using (Html.BeginForm("Index", "RestorePassword", FormMethod.Post, new { role = "form" }))
				{
					<div class="strike-line grey">
						<span><i>Мы вышлем ссылку на почту</i></span>
					</div>

					foreach (var message in Model.Messages)
					{
						<p class="@(message.IsError ? "text-danger" : "text-success")">@message.Text</p>
					}

					@Html.AntiForgeryToken()
					<div class="form-group">
						@Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Имя пользователя или электронная почта", @autofocus = "autofocus" })
						@Html.ValidationMessageFor(m => m.UserName)
					</div>
					<div class="form-group">
						<input type="submit" value="Сбросить пароль" class="ph-btn ph-btn-green btn-block"/>
					</div>
					@Html.ValidationSummary(true)
				}
			</section>
		</div>
	</div>
</div>
